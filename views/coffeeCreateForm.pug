extends layout

block content
    div(class="mb-3")
        h1 Create new coffee

    form(method="post" class="")
        div(class="form-group")
            label(for="name") Name
            input(type="text" name="name" class="form-control" aria-describedby="name" value="")
            
        div(class="form-group")
            label(for="categories") Roast
            select(name="categories" class="form-control" id="exampleFormControlSelect1")
                option(value="light roast") Light Roast
                option(value="medium roast") Medium Roast
                option(value="dark roast") Dark Roast
                option(value="espresso roast") Espresso
     
        div(class="form-group")
            label(for="description") Description
            input(type="text" name="description" class="form-control" aria-describedby="description" value="")

        div(class="form-group")
            label(for="brands") Brand
            select(name="brand" class="form-control" aria-describedby="brands" id="brands" value="")
                each brand in brands
                    option(value=brand._id)= brand.name

        div(class="form-group")
            label(for="price") Price
            span(style="position: relative; top: 35px; right: 28px;") $
            input(type="text" name="price" class="form-control" aria-describedby="price" value="")

        div(class="form-group")
            label(for="location") City
            input(type="text" name="location" class="form-control" aria-describedby="location" value="")

        div(class="form-group")
            label(for="stock") Stock
            input(type="text" name="stock" class="form-control" aria-describedby="stock" value="")

        button(type="submit" class="btn btn-danger" action='/catalog/coffee/create') Create

